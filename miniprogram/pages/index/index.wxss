.user-info{
  height: 60px;
  margin-top: 5px;
}

.user-info .img{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  box-sizing: border-box;
  margin-left: 10px;
}

.user-info .user-name{
  flex: 1;
  box-sizing: border-box;
  padding-left: 20px;
}

.user-info .user-sync{
  width: 40px;
  height: 20px;
  border: 1px solid #7890AC;
  border-radius: 5px;
  color: #7890ad;
  text-align: center;
  margin-right: 5px;
  font-size: 12px;
}


.plan-title{
  width: 95%;
  box-sizing: border-box;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  color:#424242;
  padding-left: 10px;
  border-bottom: 1px #b4c6db solid;
  margin:10px auto;
}
.plan-item{
  width: 95%;
  min-height: 100px;
  margin:5px auto;
  background: #fff;
  border-radius: 10px;
  box-shadow: 1px 1px 8px #93a8c0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  color:#424242;
  font-size: 14px;
  position: relative;
}
.plan-item-title{
  width: 80%;
  text-align: center;
  height: 30px;
  line-height: 30px;
  border-bottom: 1px #e1e1e1 solid;
  margin-bottom: 10px;
}
.plan-item-canvas{
  width: 80%;
  display: flex;
  justify-content: center;
}
.plan-item .delete-icon{
  position: absolute;
  right: 10px;
  top: 5px;
}
.plan-item .arrow-icon{
  position: absolute;
  right: 10px;
  top: calc(50% - 60px);
}

.plan-item-contents{
  display: flex;
  width: 100%;
  margin: auto;
  align-items: center;
}
.plan-item-content{
  width: 33%;
  display: flex;
  flex-direction: column;
  margin:5px auto;
  color:#666;
}
.plan-item-label{
  height: 22px;
  text-align: center;
}
.plan-item-inner{
  height: 40px;
  font-size: 22px;
  text-align: center;
}
.plan-item-line{
  width: 0.5px;
  height: 55.8px;
  background: #f1f1f1;
}

.plan-list{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.non-plan-text{
  color: #979797;
  line-height: 40px;
  font-size: 14px;
}

.plan-remind{
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  height: 40px;
  padding: 0 20px;
  font-size: 16px;
  border-top: 1px solid #c7c7c7;
}

.sync-modal{
  width:100vw;
  height: 100vh;
  background:rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  position:fixed;
  left: 0;
  top:0;
}
.sync-modal .sync-body{
  width: 90%;
  height: 300px;
  background:#fff;
  border-radius: 10px;
}
.sync-modal .sync-text{
  text-align: center;
  height: 200px;
  line-height: 200px;
}
.sync-modal button{
  background:#07c160;
  color:#fff;
}